{
  "name": "bear-react-grid",
  "version": "5.0.11",
  "description": "Most modern rwd grid system by react + styled-component",
  "keywords": [
    "react",
    "typescript",
    "flexbox",
    "styled-component",
    "Bootstrap",
    "grid-system"
  ],
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/bear-react-grid.git"
  },
  "module": "./dist/bear-react-grid.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/bear-react-grid.es.js",
      "import": "./dist/bear-react-grid.es.js"
    },
    "./dist/index.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "vite build -w",
    "build:claer": "rm -rf ./dist",
    "prepublishOnly": "run-s build",
    "build": "run-s build:claer && tsc && vite build",
    "preview": "vite preview",
    "lint:fix": "eslint ./src --fix",
    "cz": "git-cz",
    "test": "jest",
    "gitlog": "git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblueby %an %Cgreen(%cr)%Creset'",
    "release": "standard-version --release-as",
    "release:major": "standard-version -r major",
    "release:minor": "standard-version -r minor",
    "release:patch": "standard-version -r patch",
    "release:alpha": "standard-version --prerelease alpha"
  },
  "peerDependencies": {
    "react": "^18.x",
    "react-dom": "^18.x",
    "styled-components": "^5.3.x"
  },
  "devDependencies": {
    "@swc/plugin-styled-components": "^1.5.68",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "cz-git": "^1.7.1",
    "eslint": "^8.37.0",
    "eslint-config-react-app": "^7.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-styled-components": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.x",
    "react-dom": "^18.x",
    "rollup-plugin-visualizer": "^5.9.0",
    "standard-version": "^9.5.0",
    "styled-components": "^5.3.x",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^2.1.0",
    "vite-plugin-eslint": "^1.8.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
